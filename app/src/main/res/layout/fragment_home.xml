            <TextView
                android:id="@+id/tvPopular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="@string/movies_subtitle"
                android:textColor="@color/primary_color_text"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/tvPlaying"
                app:layout_constraintTop_toBottomOf="@+id/tvPopular"
                tools:listitem="@layout/view_movie_item" />

            <TextView
                android:id="@+id/tvPlaying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="@string/series_subtitle"
                android:textColor="@color/primary_color_text"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_bold"
                app:layout_constraintBottom_toTopOf="@+id/recyclerPlaying"
                app:layout_constraintTop_toBottomOf="@+id/recyclerMovie" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPlaying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tvPlaying"
                tools:listitem="@layout/view_movie_item" />

